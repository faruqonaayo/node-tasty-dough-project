<%- include("../partials/head.ejs") %>
    <link rel="stylesheet" href="/styles/product-form.css">
    <%- include("../partials/header.ejs") %>

        <form action="/admin/add-product" method="post" class="form product-form" enctype="multipart/form-data">
            <% if (error) {%>
                <div class="form-error">
                    <label for="">
                        <%= error %>
                    </label>
                </div>
                <%} %>
                    <div class="label-input">
                        <label for="productName">Product Name:</label>
                        <input type="text" name="productName" value="<%= preValue? preValue.productName:"" %>">
                    </div>
                    <div class="label-input">
                        <label for="productCategory">Product Category:</label>
                        <select name="productCategory">
                            <option value="buns">Buns</option>
                            <option value="bread">Bread</option>
                            <option value="pastries">Pastries</option>
                            <option value="cake">Cake</option>
                        </select>
                    </div>
                    <div class="label-input">
                        <label for="productPrice">Product Price:</label>
                        <input type="text" name="productPrice" value="<%= preValue? preValue.productPrice:"" %>">
                    </div>
                    <div class="label-input">
                        <label for="productImage">Product Image:</label>
                        <input type="file" name="productImage" accept="image/jpg, image/jpeg, image/png">
                    </div>
                    <button type="submit" class="btn add-btn">Add Product</button>
        </form>
        <%- include("../partials/footer.ejs") %>